{
  "dependencies": {
    "concurrently": "4.1.0",
    "husky": "2.4.0",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "pretty": "prettier --write 'packages/{client,server}/src/**/*.{ts,tsx}'",
    "start": "concurrently --kill-others \"yarn workspace @hack/server start\" \"yarn workspace @hack/client start\""
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/client",
      "packages/server"
    ]
  }
}
